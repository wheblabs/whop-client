{
	"name": "@whoplabs/whop-client",
	"version": "0.6.0",
	"description": "Whop account SDK",
	"homepage": "https://github.com/wheblabs/whop-client#readme",
	"bugs": {
		"url": "https://github.com/wheblabs/whop-client/issues"
	},
	"license": "MIT",
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/wheblabs/whop-client.git"
	},
	"scripts": {
		"build": "bunup",
		"dev": "bunup --watch",
		"prepare": "bun simple-git-hooks",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"release": "bumpp --commit --push --tag",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"test:watch": "bun test --watch",
		"type-check": "tsc --noEmit"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.6",
		"@commitlint/cli": "^19.6.1",
		"@commitlint/config-conventional": "^19.6.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@types/bun": "^1.3.0",
		"bunup": "^0.15.3",
		"conventional-changelog-conventionalcommits": "^8.0.0",
		"semantic-release": "^24.2.3",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"typescript": ">=4.5.0"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		},
		"./package.json": "./package.json"
	},
	"module": "./dist/index.js",
	"simple-git-hooks": {
		"pre-commit": "bun run lint && bun run type-check",
		"commit-msg": "bunx commitlint --edit $1"
	},
	"types": "./dist/index.d.ts"
}
