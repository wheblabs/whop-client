{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended", "group:allNonMajor"],
	"schedule": ["before 6am on Monday"],
	"timezone": "America/New_York",
	"labels": ["dependencies"],
	"automerge": true,
	"automergeType": "pr",
	"platformAutomerge": true,
	"packageRules": [
		{
			"description": "Auto-merge patch and minor updates",
			"matchUpdateTypes": ["patch", "minor"],
			"automerge": true
		},
		{
			"description": "Group TypeScript updates",
			"matchPackageNames": ["typescript"],
			"groupName": "TypeScript"
		},
		{
			"description": "Group Biome updates",
			"matchPackagePatterns": ["@biomejs/*", "biome"],
			"groupName": "Biome"
		},
		{
			"description": "Group semantic-release updates",
			"matchPackagePatterns": ["@semantic-release/*", "semantic-release"],
			"groupName": "semantic-release"
		},
		{
			"description": "Group commitlint updates",
			"matchPackagePatterns": ["@commitlint/*", "commitlint"],
			"groupName": "commitlint"
		}
	],
	"vulnerabilityAlerts": {
		"enabled": true,
		"labels": ["security"]
	}
}
